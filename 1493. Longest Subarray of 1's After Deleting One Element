class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int n = nums.size();
        nums.push_back(0);
        n++;

        int preCnt = 0, idx = -1;
        for(int i=0; i<n-1; i++) {
            if(nums[i] == 0) {
                idx = i;
                break;
            }
            else
            preCnt++;
        }

        if(idx == -1) {
            return nums.size()-2;
        }
        int cnt = 0;
        int ans = 0;
        for(int i=idx+1; i<n; i++) {
            if(nums[i] == 0) {
                ans = max(ans, cnt + preCnt);
                preCnt = cnt;
                cnt = 0;
            }
            else {
                cnt++;
            }
        }
        return ans;
    }
};
