class Solution {
public:
    int countSquares(vector<vector<int>>& matrix) {
        int n = matrix.size();
        int m = matrix[0].size();
        vector<vector<int>> ans(n, vector<int>(m, 0));

        int cnt = 0;
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (matrix[i][j] == 1) {
                    if (i == 0 || j == 0) {
                        ans[i][j] = 1;
                    }
                    else {
                        ans[i][j] = min({ans[i-1][j-1], ans[i][j-1], ans[i-1][j]}) + 1;
                    }
                    cnt += ans[i][j];
                }
            }
        }

        return cnt;
    }
};
