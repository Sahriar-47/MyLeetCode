class Solution {
    public int recur(int n, int[] dp, int[] cost, int len) {
        if(n > len-1) return 0;
        if(dp[n] != -1) return dp[n];

        int left = recur(n+1, dp, cost, len);
        int right = recur(n+2, dp, cost, len);

        return dp[n] = cost[n] + Math.min(left, right);
    }
    public int minCostClimbingStairs(int[] cost) {
        int len = cost.length;
        int[] dp = new int[len];
        Arrays.fill(dp, -1);

        int startFromZero = recur(0, dp, cost, len);
        int startFromOne = recur(1, dp, cost, len);

        return Math.min(startFromZero, startFromOne);
    }
}
