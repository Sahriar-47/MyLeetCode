class Solution {
    public int findTheCity(int n, int[][] edges, int distanceThreshold) {
        int[][] dist = new int[n][n];
        for(int i=0; i<n; i++) {
            Arrays.fill(dist[i], (int)1e8);
            dist[i][i] = 0;
        }

        for(int[] edge: edges) {
            int u = edge[0];
            int v = edge[1];
            int w = edge[2];
            dist[u][v] = w;
            dist[v][u] = w;
        }

        for(int k=0; k<n; k++) {
            for(int i=0; i<n; i++) {
                for(int j=0; j<n; j++) {
                    dist[i][j] = Math.min(dist[i][k]+dist[k][j], dist[i][j]);
                }
            }
        }

        int reachableCity = -1;
        int fewestReachable = n;
        for(int i=0; i<n; i++) {
            int cityCount = 0;
            for(int j=0; j<n; j++) {
                if(dist[i][j] <= distanceThreshold) {
                    cityCount++;
                }
            }
            if(cityCount <= fewestReachable) {
                fewestReachable = cityCount;
                reachableCity = i;
            }
        }

        return reachableCity;
    }
}
