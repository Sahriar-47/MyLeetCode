class Solution {
public:
    int minimumArea(vector<vector<int>>& grid) {
        int n = grid.size();
        int m = grid[0].size();
        vector<int>a,b;
        for(int i=0; i<n; i++) {
            for(int j=0; j<m; j++) {
                if(grid[i][j] == 1) {
                    a.push_back(i+1);
                    b.push_back(j+1);
                }
            }
        }
        sort(a.begin(), a.end());
        sort(b.begin(), b.end());
        int ans = (a[a.size()-1]-a[0]+1)*(b[b.size()-1]-b[0]+1);
        return ans;
    }
};
